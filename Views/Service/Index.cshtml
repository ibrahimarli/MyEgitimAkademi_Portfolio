@model List<MyEgitimAkademi_Portfolio.Models.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Hizmet ID</th>
        <th>Hizmet Ad</th>
        <th>Hizmet Sil</th>
        <th>Hizmet Güncelle</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ServiceId</td>
                    <td>@item.ServiceName</td>
                    <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger" style="width:100%">Sil</a></td>
                    <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-success" style="width:100%">Güncelle</a></td>
                </tr>
            }
</table>
<a href="/Service/AddService/" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>
