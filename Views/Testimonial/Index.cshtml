@model List<MyEgitimAkademi_Portfolio.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Adı</th>
        <th>Referans Ünvanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <!--  <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>-->
            <td><a href="javascript:void(0);" onclick="confirmDelete('@item.TestimonialId')" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Testimonial/AddTestimonial/" class="btn btn-outline-primary">Yeni Referans Giriş</a>

<!--Scriptler-->
<script>
    function confirmDelete(testimonialId) {
        var isConfirmed = confirm("Silmek istediğinize emin misiniz?");

        if (isConfirmed) {
            // Eğer kullanıcı evet derse, silme işlemini gerçekleştir
            window.location.href = "/Testimonial/DeleteTestimonial/" + testimonialId;
        } else {
            return false
        }
    }
</script>
